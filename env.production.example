# Production Environment Variables for AWS
# Copy this file to .env.production and update with your actual values

# Application
APP_NAME="Church Course Tracker"
ENVIRONMENT="production"
DEBUG=false
SECRET_KEY="your-super-secret-key-change-this"

# Database (RDS PostgreSQL)
DATABASE_URL="postgresql://postgres:your-db-password@your-rds-endpoint:5432/church_course_tracker"

# Planning Center API
PLANNING_CENTER_APP_ID="your-planning-center-app-id"
PLANNING_CENTER_SECRET="your-planning-center-secret"
PLANNING_CENTER_ACCESS_TOKEN="your-planning-center-access-token"

# AWS Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket-name"
AWS_REGION="us-east-1"

# CORS (Update with your domain)
ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
MAX_FILE_SIZE=104857600  # 100MB

# Logging
LOG_LEVEL="INFO"

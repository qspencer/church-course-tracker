# Church Course Tracker - Production Environment Variables
# Copy this file to .env.production and fill in your values

# Application Settings
APP_NAME="Church Course Tracker"
VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=false

# Security (CRITICAL - Generate strong secrets!)
SECRET_KEY="generate-a-strong-32-character-secret-key-here"
ACCESS_TOKEN_EXPIRE_MINUTES=120
BCRYPT_ROUNDS=12

# CORS Configuration (Production domains only)
ALLOWED_ORIGINS="https://apps.quentinspencer.com,https://apps.eastgate.church"

# Database (Production RDS)
DATABASE_URL="postgresql://username:password@rds-endpoint:5432/church_course_tracker"
DATABASE_ECHO=false

# Database Connection Pooling (Production settings)
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# AWS Configuration (Production)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-production-s3-bucket"
AWS_REGION="us-east-1"

# Planning Center API (Production)
PLANNING_CENTER_API_URL="https://api.planningcenteronline.com"
PLANNING_CENTER_APP_ID="your-planning-center-app-id"
PLANNING_CENTER_SECRET="your-planning-center-secret"
PLANNING_CENTER_ACCESS_TOKEN="your-planning-center-access-token"
USE_MOCK_PLANNING_CENTER=false

# Rate Limiting (Production settings)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR="/app/uploads"

# Logging
LOG_LEVEL="WARNING"

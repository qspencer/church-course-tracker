# Church Course Tracker - Environment Variables Template
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME="Church Course Tracker"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# Security (CRITICAL - Change these in production!)
SECRET_KEY="your-super-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=120
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS="https://apps.quentinspencer.com,https://apps.eastgate.church"

# Database
DATABASE_URL="sqlite:///./data/church_course_tracker.db"
DATABASE_ECHO=false

# Database Connection Pooling (PostgreSQL/MySQL only)
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"

# Planning Center API
PLANNING_CENTER_API_URL="https://api.planningcenteronline.com"
PLANNING_CENTER_APP_ID=""
PLANNING_CENTER_SECRET=""
PLANNING_CENTER_ACCESS_TOKEN=""
USE_MOCK_PLANNING_CENTER=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# Logging
LOG_LEVEL="INFO"
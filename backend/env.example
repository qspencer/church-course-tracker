# Church Course Tracker - Environment Configuration

# Application
APP_NAME="Church Course Tracker"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# Security
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Database
DATABASE_URL="sqlite:///./data/church_course_tracker.db"
DATABASE_ECHO=false

# Planning Center API
PLANNING_CENTER_API_URL="https://api.planningcenteronline.com"
PLANNING_CENTER_APP_ID="your-planning-center-app-id"
PLANNING_CENTER_SECRET="your-planning-center-secret"

# CORS (JSON array format)
ALLOWED_HOSTS=["http://localhost:4200", "http://localhost:3000"]

# File uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="./uploads"

# Logging
LOG_LEVEL="INFO"

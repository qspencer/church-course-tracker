FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install psycopg2-binary

# Copy the fix script
COPY fix_database_docker.py /fix_database_docker.py

# Make it executable
RUN chmod +x /fix_database_docker.py

# Run the fix script
CMD ["python", "/fix_database_docker.py"]
